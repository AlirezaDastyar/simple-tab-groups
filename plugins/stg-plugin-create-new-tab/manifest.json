{
    "manifest_version": 2,

    "applications": {
        "gecko": {
            "id": "stg-plugin-create-new-tab@drive4ik",
            "strict_min_version": "61.0"
        }
    },

    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "1.0",
    "author": "Drive4ik",
    "homepage_url": "https://github.com/drive4ik/simple-tab-groups",

    "icons": {
        "96": "/icons/icon.svg"
    },

    "browser_action": {
        "default_area": "tabstrip",
        "default_icon": "/icons/icon.svg",
        "default_title": "__MSG_temporaryContainerTitle__"
    },

    "permissions": [
        "storage",
        "notifications",
        "cookies",
        "contextualIdentities"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "options_ui": {
        "page": "options/options.html"
    },

    "default_locale": "en",

    "commands": {
        "_execute_browser_action": {
            "description": "Create tab"
        }
    }

}
