{
    "name": "simple-tab-groups",
    "version": "1.0.0",
    "description": "Create, modify and quickly change tab groups. Inspired by the old add-on Tab Groups :)",
    "author": "Drive4ik <drive4ik@gmail.com>",
    "scripts": {
        "build": "webpack --mode development",
        "build-prod": "cross-env IS_PRODUCTION=true webpack --mode production",
        "watch": "npm run build -- --watch",
        "watch-prod": "npm run build:prod -- --watch",
        "build-zip": "node scripts/build-zip.js && npm run build:prod && cross-env IS_PRODUCTION=true node scripts/build-zip.js"
    },
    "dependencies": {
        "vue": "^2.6.14",
        "vue-lazyload": "^1.3.3",
        "vue-swatches": "^2.1.0"
    },
    "devDependencies": {
        "copy-webpack-plugin": "^9.0.1",
        "cross-env": "^7.0.0",
        "css-loader": "^6.2.0",
        "fs-extra": "^10.0.0",
        "mini-css-extract-plugin": "^2.1.0",
        "node-sass": "^6.0.1",
        "optimize-css-assets-webpack-plugin": "^6.0.1",
        "sass-loader": "^12.1.0",
        "vue-loader": "^15.9.8",
        "vue-template-compiler": "^2.6.14",
        "webpack": "^5.48.0",
        "webpack-cli": "^4.7.2",
        "webpack-shell-plugin-next": "^2.2.2",
        "zip-a-folder": "^1.1.0"
    }
}
