{
    "manifest_version": 2,

    "applications": {
        "gecko": {
            "id": "simple-tab-groups@drive4ik",
            "strict_min_version": "63.0"
        }
    },

    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "3.4.4",
    "author": "Drive4ik",
    "homepage_url": "https://github.com/drive4ik/simple-tab-groups",

    "icons": {
        "96": "icons/icon.svg"
    },

    "permissions": [
        "tabs",
        "tabHide",
        "notifications",
        "menus",
        "contextualIdentities",
        "cookies",
        "sessions",
        "downloads",
        "storage",
        "unlimitedStorage"
    ],

    "optional_permissions": [
        "<all_urls>",
        "bookmarks"
    ],

    "browser_action": {
        "default_icon": "icons/icon.svg",
        "default_title": "__MSG_extensionName__",
        "default_popup": "popup/popup.html",
        "browser_style": false
    },

    "sidebar_action": {
        "default_icon": "icons/icon.svg",
        "default_title": "__MSG_extensionName__",
        "default_panel": "popup/popup.html#sidebar",
        "browser_style": false,
        "open_at_install": false
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["web/hotkeys.js"],
            "css": ["web/hotkeys.css"],
            "all_frames" : true,
            "match_about_blank": true,
            "run_at": "document_start"
        }
    ],

    "options_ui": {
        "page": "options/options.html",
        "browser_style": false
    },

    "background": {
        "scripts": ["background.js"]
    },

    "content_security_policy": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src * data:; script-src 'self'",

    "default_locale": "en",

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "F8"
            },
            "description": "Open popup"
        },
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S",
                "linux": "F1"
            },
            "description": "Open sidebar"
        }
    }

}
